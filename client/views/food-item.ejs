<%- include("./partials/head.ejs") %> <%- include("./partials/nav.ejs") %>

<!-- shop-details Area Start-->
<div class="shop-details-area pd-top-100">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="sticy-product">
          <div class="product-thumbnail-wrapper">
            <div class="single-thumbnail-slider">
              <div class="slider-item">
                <img src="<%= foodItem.img%>" alt="item" />
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="shop-item-details">
          <nav>
            <ul class="breadcrumb">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item"><a href="/menu">Menu</a></li>
              <li class="breadcrumb-item active" aria-current="page">
                Details
              </li>
            </ul>
          </nav>
          <h2 class="entry-title"><%=foodItem.name%></h2>
          <div class="row">
            <div class="col-lg-6 order-lg-last align-self-center">
              <div class="rating text-lg-end">
                4.9
                <span class="rating-inner">
                  <i class="ri-star-fill ps-0"></i>
                  <i class="ri-star-fill"></i>
                  <i class="ri-star-fill"></i>
                  <i class="ri-star-fill"></i>
                  <i class="ri-star-half-line pe-0"></i>
                </span>
              </div>
            </div>
            <div class="col-lg-6 align-self-center">
              <h4 class="price">$<%=parseFloat(foodItem.price).toFixed(2)%></h4>
            </div>
          </div>
          <p class="mt-4"><%=foodItem.description%></p>
          <!-- <form method="POST" action="/cart">
            <div class="quantity buttons_added">
              <input type="button" value="-" class="minus" />
              <input
                type="number"
                class="input-text qty text"
                step="1"
                min="1"
                max="100"
                name="quantity"
                value="1"
              />
              <input type="button" value="+" class="plus" />
            </div>
            <button type="submit" class="btn btn-secondary">ADD TO CART</button>
          </form> -->
          <a class="btn btn-secondary" href="/cart/add/<%=foodItem.id%>"
            >ADD TO CART</a
          >
        </div>
      </div>
      <!-- related-product Area Start-->

      <section class="related-product-area pd-top-120">
        <div class="container">
          <div class="row justify-content-center">
            <div class="col-lg-12">
              <div class="section-title mb-0">
                <h2 class="title">Related Products</h2>
              </div>
              <div class="row justify-content-center">
                <%if(relatedFood){%> <%relatedFood.forEach((foodItem)=>{ %>
                <div class="col-lg-4 col-md-6">
                  <div class="single-item-wrap">
                    <div class="thumb">
                      <img src="<%=foodItem.img%>" alt="img" />
                      <a class="fav-btn" href="#"
                        ><i class="ri-heart-line"></i
                      ></a>
                    </div>
                    <div class="wrap-details">
                      <h5><a href="/food-item"><%=foodItem.name%></a></h5>
                      <div class="wrap-footer">
                        <div class="rating">
                          4.9
                          <span class="rating-inner">
                            <i class="ri-star-fill ps-0"></i>
                            <i class="ri-star-fill"></i>
                            <i class="ri-star-fill"></i>
                            <i class="ri-star-fill"></i>
                            <i class="ri-star-half-line pe-0"></i>
                          </span>
                          (200)
                        </div>
                        <h6 class="price">$<%=foodItem.price%></h6>
                      </div>
                    </div>
                    <div class="btn-area">
                      <a class="btn btn-secondary" href="/food-item">VIEW</a>
                    </div>
                  </div>
                </div>
                <% }) %> <% } %>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- related-product Area End -->
    </div>
  </div>
</div>
<!-- shop-details Area End -->

<%- include("./partials/footer.ejs") %>
